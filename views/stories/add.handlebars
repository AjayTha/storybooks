<h2 class="page-header mt-3 mb-2">Add Story</h2>
<form action="/stories" method="post">
  <div class="form-group">
    <label for="exampleInputEmail1">Title</label>
    <input type="text" class="form-control" id="exampleInputEmail1" name="title" aria-describedby="emailHelp" placeholder="Enter Title">
    
  </div>
  
  <div class="form-check">
    <input type="checkbox" class="form-check-input" name="allowComments" id="exampleCheck1">
    <label class="form-check-label" for="exampleCheck1">Allow Comments</label>
  </div>
   <div class="form-group mt-3">
      <select id="inputState" name="status" class="form-control">
        <option selected>Public</option>
        <option>Private</option>
        <option>Unpublished</option>
      </select>
    
  </div>
  <div class="form-group mt-3">
    <label for="exampleFormControlTextarea1">Write Your Experience</label>
    <textarea class="form-control" id="exampleFormControlTextarea1" name="body" rows="3"></textarea>
  </div>
    <button type="submit" class="btn btn-primary">Save</button>

</form>

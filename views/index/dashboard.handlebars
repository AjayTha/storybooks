<h4 class="page-header m-4">Your Stories</h4>
<table class="table table-striped table-hover" id="table">
  <thead>
    <tr>
      <th scope="col"> Title</th>
      <th scope="col">Date</th>
      <th scope="col">Status</th>
      <th scope="col"></th>
    </tr>
  </thead>
  {{#if stories}}
  <tbody>
  	{{#each stories}}
    
    <tr>
      <td scope="row"><a href="stories/show/{{id}}" style="color: black">{{title}}</a></td>
      <td>{{dateformat date "dd-mm-yyyy"}}</td>
      <td>{{status}}</td>
      <td>
        <ul class="list-inline">
        <li class="list-inline-item"><a href="/stories/edit/{{id}}" style="color: white"><button type="button" class="btn btn-info mr-2" id="e1"><i class="fa fa-edit">Edit</i></button></a></li>
        <li class="list-inline-item">

          <form action="stories/{{id}}?_method=DELETE" method="post">
              <input type="hidden" name="_method" value="DELETE">
      	       <button type="submit" class="btn btn-danger" id="d1"><i class="fa fa-trash"> Delete</i></button>
          </form>
        </li>
        </ul>
      </td>
     
    </tr>
  </button>
     {{/each}}
</table>
{{else}}
  <p>You have not created any stories yet</p>
{{/if}}